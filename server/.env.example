# Environment variables
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/viaguild?schema=public"

# JWT
JWT_SECRET="your-super-secret-key-change-in-production"
JWT_EXPIRES_IN="1d"

# Encryption (32 characters for AES-256)
ENCRYPTION_KEY="32-character-string-for-encryption"

# Cloudflare R2 Credentials
    R2_ACCOUNT_ID=your_cloudflare_account_id_for_r2
    R2_ACCESS_KEY_ID=your_r2_access_key_id
    R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
    R2_BUCKET_NAME=your_r2_bucket_name
    R2_PUBLIC_URL_BASE=https://pub-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx.r2.dev 

# Social Authentication

# Twitter Authentication
TWITTER_CONSUMER_KEY=
TWITTER_CONSUMER_SECRET=

# For Bluesky Authentication we'll use app passwords instead of API keys

# Twitch Authentication
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TWITCH_REDIRECT_URI=http://localhost:3000/api/auth/connect/twitch/callback


# Discord API Credentials
DISCORD_CLIENT_ID="YourDiscordClientId"
DISCORD_CLIENT_SECRET="YourDiscordClientSecret"
DISCORD_REDIRECT_URI="http://localhost:3000/api/auth/connect/discord/callback"


